{
  "name": "udpsender-js",
  "version": "1.0.0",
  "description": "Web-based UDP message sender for controlling network devices",
  "main": "dist/server.js",
  "scripts": {
    "build:server": "tsc --project tsconfig.json",
    "build:client": "tsc --project tsconfig.client.json",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node --project tsconfig.json src/server.ts\"",
    "dev:client": "tsc --project tsconfig.client.json --watch",
    "typecheck": "tsc --project tsconfig.json --noEmit && tsc --project tsconfig.client.json --noEmit"
  },
  "keywords": [
    "udp",
    "network",
    "web",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.33",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

{
  "name": "udpsender-js",
  "version": "1.0.1",
  "description": "Web-based UDP message sender for controlling network devices",
  "main": "dist/electron/main.js",
  "scripts": {
    "build:server": "tsc --project tsconfig.json",
    "build:client": "tsc --project tsconfig.client.json",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build": "npm run build:server && npm run build:client && npm run build:electron",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node --project tsconfig.json src/server.ts\"",
    "dev:client": "tsc --project tsconfig.client.json --watch",
    "electron": "npm run build:server && npm run build:electron && electron dist/electron/main.js",
    "dist": "npm run build && electron-builder",
    "typecheck": "tsc --project tsconfig.json --noEmit && tsc --project tsconfig.client.json --noEmit && tsc --project tsconfig.electron.json --noEmit"
  },
  "keywords": [
    "udp",
    "network",
    "web",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.33",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.udpsender.app",
    "productName": "UDP Sender",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/electron/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
